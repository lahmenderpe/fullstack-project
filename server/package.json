{
  "name": "server",
  "version": "1.0.0",
  "description": "fullstack server application",
  "main": "index.js",
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "dev": "nodemon index.js",
    "dev:test": "NODE_ENV=test nodemon index.js",
    "test": "NODE_ENV=test jest --verbose --detectOpenHandles",
    "build:ui": "rm -rf build && cd ../client && npm run build && cp -r build ../server && cd ../client rm -rf build",
    "deploy": "npm run build:ui && git add . && git commit -m uibuild && git push"
  },
  "author": "Cihan Erenler",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4"
  }
}
